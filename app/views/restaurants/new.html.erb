<h1>Create a Restaurant</h1>
<%= form_for :restaurant do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.text_field :password_confirmation %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :open_time %><br>
    <%= f.text_field :open_time %>
  </div>

  <div class="field">
    <%= f.label :close_time %><br>
    <%= f.text_field :close_time %>
  </div>

  <div class="field">
    <%= f.label :menu_link %><br>
    <%= f.text_field :menu_link %>
  </div>
<% end %>

